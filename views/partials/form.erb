<form action="/<%= @post[:id] %>" method="post">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title">
  </div>
  <div>
    <label>Body</label>
    <textarea name="body" rows= "8" cols="80" placeholder="Enter a title"></textarea>
  </div>
  <div>
    <input type="submit" value="Save Post">
  </div>
</form>
